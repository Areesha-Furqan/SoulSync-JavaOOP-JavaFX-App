<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane fx:controller="soulsyncproject.SoundController"
            xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            prefWidth="400" prefHeight="650"
            style="-fx-background-color: linear-gradient(to bottom right, #fce4ec, #d4a5ff);"
            stylesheets="@style.css">

    <!-- Slide-up panel -->
    <VBox fx:id="sliderPane"
          spacing="20"
          alignment="CENTER"
          style="-fx-background-color: rgba(255,255,255,0.9); -fx-padding: 20; -fx-background-radius: 20 20 0 0;"
          AnchorPane.bottomAnchor="80"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">

        <!-- Play/Repeat controls -->
        <HBox spacing="30" alignment="CENTER">
            <Button fx:id="playButton" text="Play" onAction="#handlePlayButtonClick" styleClass="music-button">
                <graphic>
                    <ImageView fitWidth="30" fitHeight="30">
                        <Image url="@icons/play.png"/>
                    </ImageView>
                </graphic>
            </Button>

            <ToggleButton fx:id="btnRepeat" onAction="#onRepeatToggle" styleClass="music-button">
                <graphic>
                    <ImageView fitWidth="24" fitHeight="24">
                        <Image url="icons/repeat.png"/>
                    </ImageView>
                </graphic>
            </ToggleButton>
        </HBox>

        <!-- Scrollable sound list -->
        <ScrollPane fitToHeight="true"
                    hbarPolicy="ALWAYS"
                    vbarPolicy="NEVER"
                    style="-fx-background-color: transparent;"
                    prefHeight="120"
                    maxHeight="120">
            <content>
                <HBox fx:id="soundThumbContainer" spacing="15" alignment="CENTER" style="-fx-padding: 10;"/>
            </content>
        </ScrollPane>
    </VBox>

    <!-- Bottom Navigation Bar -->
    <AnchorPane fx:id="navBarContainer"
                prefHeight="80"
                AnchorPane.bottomAnchor="0"
                AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0"
                style="-fx-background-color: transparent;">

        <HBox fx:id="navBar"
              alignment="CENTER"
              spacing="35"
              prefHeight="60"
              AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0"
              AnchorPane.bottomAnchor="0"
              style="-fx-background-color: white; -fx-padding: 10 20 10 20; -fx-effect: dropshadow(gaussian, #ccc, 10, 0.3, 0, 1);">

            <Button onAction="#goToQuotes" style="-fx-background-color: transparent;">
                <graphic>
                    <ImageView fitWidth="25" fitHeight="25">
                        <Image url="@icons/quote.png"/>
                    </ImageView>
                </graphic>
            </Button>

            <Button onAction="#stayHere" style="-fx-background-color: transparent;">
                <graphic>
                    <ImageView fitWidth="25" fitHeight="25">
                        <Image url="@icons/music.png"/>
                    </ImageView>
                </graphic>
            </Button>

            <Button onAction="#goToMain" style="-fx-background-color: transparent;">
                <graphic>
                    <ImageView fitWidth="25" fitHeight="25">
                        <Image url="@icons/chat.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button onAction="#goToTheme" style="-fx-background-color: transparent; -fx-cursor: hand;">
                <graphic>
                    <ImageView fitWidth="25" fitHeight="25">
                        <Image url="@icons/paint-roller.png"/>
                    </ImageView>
                </graphic>
            </Button>

            <!-- User -->
            <Button onAction="#goToUser" style="-fx-background-color: transparent; -fx-cursor: hand;">
                <graphic>
                    <ImageView fitWidth="25" fitHeight="25">
                        <Image url="@icons/user.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </AnchorPane>

</AnchorPane>
